{
  "name": "conference-party-microservice",
  "version": "1.0.0",
  "description": "Gamescom 2025 Party Discovery - Complete PWA with 9-Tool Velocity System",
  "main": "index.js",
  "scripts": {
    "build:bundle": "node tools/refactor/build-simple.js",
    "dev": "node frontend/dev-server.js",
    "dev:python": "cd frontend/src && python3 -m http.server 3000",
    "dev:firebase": "firebase serve --only hosting",
    "design-editor": "node tools/design-system-editor.js",
    "design-editor:port": "node tools/design-system-editor.js --port",
    "design:tokens": "echo 'Design tokens available at http://localhost:3001/tokens'",
    "design:components": "echo 'Component library at http://localhost:3001/components'",
    "build": "node tools/pwa-orchestrator.js build",
    "predeploy": "bash tools/preflight.sh",
    "deploy": "firebase deploy --only hosting",
    "deploy:hosting": "npm run predeploy && firebase deploy --only hosting",
    "qd": "node tools/bump-build.js && firebase deploy --only hosting",
    "qd:msg": "node -e \"process.stdout.write('BUILD -> ' + (Date.now()) + '\\n')\" && firebase deploy --only hosting",
    "quick": "./quick-deploy.sh",
    "test": "node tools/api-test-suite.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ci": "playwright test --reporter=line",
    "setup": "npm install && node tools/firebase-manager.js health",
    "firebase:health": "node tools/firebase-manager.js health",
    "firebase:deploy": "node tools/firebase-manager.js deploy",
    "firebase:logs": "node tools/firebase-manager.js logs",
    "data:geocode": "node tools/maps-helper.js geocode",
    "data:process": "node tools/data-processor.js process",
    "data:validate": "node tools/data-processor.js validate",
    "pwa:build": "node tools/pwa-orchestrator.js build",
    "pwa:deploy": "node tools/pwa-orchestrator.js deploy",
    "pwa:test": "node tools/pwa-orchestrator.js test",
    "search:build": "node tools/search-filter.js build",
    "search:test": "node tools/search-filter.js test",
    "analytics:build": "node tools/analytics-orchestrator.js build",
    "analytics:test": "node tools/analytics-orchestrator.js test",
    "calendar:export": "node tools/calendar-helper.js export",
    "calendar:test": "node tools/calendar-helper.js test",
    "frontend:build": "node tools/frontend-builder.js build",
    "frontend:dev": "node tools/frontend-builder.js dev",
    "lint": "npm run lint:tokens && npm run lint:stylelint && npm run lint:hex",
    "lint:tokens": "bash scripts/check-tokens.sh",
    "lint:stylelint": "stylelint 'frontend/src/**/*.css' --allow-empty-input",
    "lint:hex": "node tools/colors/sweep-colors.mjs",
    "check:tokens": "bash scripts/check-tokens.sh",
    "check:hex": "node tools/colors/sweep-colors.mjs",
    "lint:css": "npm run lint:tokens",
    "validate:tokens": "bash tools/validate-tokens.sh",
    "migrate:tokens": "bash tools/migrate-to-tokens.sh preview",
    "migrate:tokens:apply": "bash tools/migrate-to-tokens.sh apply",
    "build:update": "node tools/update-build.js",
    "guard:day-pills": "tools/guards/guard-day-pills.sh",
    "smoke:prod": "node tools/fastlane/smoke.js --url=https://conference-party-app.web.app",
    "smoke:url": "node tools/fastlane/smoke.js",
    "ship:prod": "npm run smoke:prod && npx firebase-tools deploy --only hosting --message \"fastlane ship\"",
    "e2e": "playwright test",
    "e2e:prod": "cross-env BASE_URL=https://conference-party-app.web.app E2E_MOCK=1 playwright test",
    "e2e:live": "cross-env BASE_URL=https://conference-party-app.web.app E2E_MOCK=0 playwright test",
    "e2e:dev": "cross-env BASE_URL=http://localhost:5000 E2E_MOCK=1 playwright test"
  },
  "dependencies": {
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.1.0",
    "googleapis": "^122.0.0",
    "path-to-regexp": "6.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^20.4.5",
    "chokidar": "^4.0.3",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.1",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "puppeteer": "^21.7.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-declaration-strict-value": "^1.10.4",
    "typescript": "^5.1.6",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "gamescom",
    "party",
    "discovery",
    "pwa",
    "firebase",
    "microservice"
  ],
  "author": "jamstermayne",
  "license": "MIT"
}
