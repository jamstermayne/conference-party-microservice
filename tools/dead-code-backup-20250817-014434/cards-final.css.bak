/* Card base component - Modern Design System */
/* Legacy vcard classes using modern card system styles */

.vcard {
  /* Modern card base styles */
  --card-padding: var(--s-5);
  --card-gap: var(--s-4);
  --card-radius: var(--r-3);
  --card-shadow-rest: 0 1px 3px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24);
  --card-shadow-hover: 0 4px 12px rgba(0, 0, 0, 0.15), 0 2px 4px rgba(0, 0, 0, 0.25);
  --card-transition: all 220ms cubic-bezier(0.4, 0, 0.2, 1);
  
  position: relative;
  display: flex;
  flex-direction: column;
  gap: var(--card-gap);
  padding: var(--card-padding);
  background: var(--color-surface-2);
  border: 1px solid var(--color-border);
  border-radius: var(--card-radius);
  box-shadow: var(--card-shadow-rest);
  transition: var(--card-transition);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.vcard:hover {
  transform: translateY(-2px);
  box-shadow: var(--card-shadow-hover);
  border-color: rgba(255, 255, 255, 0.12);
}

.vcard__head,
.vcard__header {
  display: flex;
  flex-direction: column;
  gap: var(--s-2);
}

.vcard__body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--s-3);
}

.vcard__foot,
.vcard__footer,
.vcard__actions {
  display: flex;
  gap: var(--s-3);
  padding-top: var(--s-4);
  border-top: 1px solid var(--color-border);
}

.vcard__title {
  font-size: 1.25rem;
  font-weight: 600;
  line-height: 1.3;
  color: var(--color-text);
  margin: 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.vcard__subtitle {
  font-size: 0.9375rem;
  color: var(--color-text-dim);
  line-height: 1.5;
}

.vcard__desc,
.vcard__text {
  font-size: 0.9375rem;
  line-height: 1.6;
  color: var(--color-text-dim);
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.vcard__badges {
  display: flex;
  flex-wrap: wrap;
  gap: var(--s-2);
  margin-top: auto;
}

.vcard__pill {
  display: inline-flex;
  align-items: center;
  gap: var(--s-1);
  padding: var(--s-1) var(--s-3);
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: var(--r-4);
  font-size: 0.8125rem;
  font-weight: 500;
  color: var(--color-text-dim);
  transition: var(--transition-fast);
}

.vcard__pill:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(255, 255, 255, 0.12);
}

.vcard__meta {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: var(--s-2) var(--s-3);
  font-size: 0.9375rem;
  color: var(--color-text-dim);
  list-style: none;
  margin: 0;
  padding: 0;
}

.vcard__action {
  flex: 1;
  padding: var(--s-3) var(--s-4);
  border-radius: var(--r-2);
  font-size: 0.9375rem;
  font-weight: 600;
  text-align: center;
  cursor: pointer;
  transition: var(--transition-fast);
  appearance: none;
  border: none;
  background: none;
  font-family: inherit;
}

.vcard__action--primary {
  background: var(--color-accent);
  color: white;
}

.vcard__action--primary:hover {
  background: var(--color-accent-strong);
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(107, 123, 255, 0.3);
}

.vcard__action:not(.vcard__action--primary) {
  background: rgba(255, 255, 255, 0.05);
  color: var(--color-text);
  border: 1px solid var(--color-border);
}

.vcard__action:not(.vcard__action--primary):hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(255, 255, 255, 0.12);
}

/* Grid containers */
.vcard-grid {
  display: grid;
  gap: var(--s-4);
  padding: var(--s-4);
  grid-template-columns: repeat(2, 1fr);
}

.vcard-list {
  display: grid;
  gap: var(--s-4);
  padding: var(--s-4);
  grid-template-columns: 1fr;
}

@media (max-width: 640px) {
  .vcard-grid {
    grid-template-columns: 1fr;
  }
}

/* Legacy variants */
.vcard--compact {
  --card-padding: var(--s-3);
  --card-gap: var(--s-2);
}

.vcard--clickable {
  cursor: pointer;
}

.vcard--loading {
  pointer-events: none;
  opacity: 0.5;
}

.vcard--loading::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.05),
    transparent
  );
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}
