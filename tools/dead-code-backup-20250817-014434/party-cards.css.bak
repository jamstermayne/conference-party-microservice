/* Modern Party Cards using card-modern system */
.party-card {
  /* Use modern card base */
  --card-padding: var(--s-5);
  --card-gap: var(--s-4);
  --card-radius: var(--r-3);
  --card-shadow-rest: 0 1px 3px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24);
  --card-shadow-hover: 0 4px 12px rgba(0, 0, 0, 0.15), 0 2px 4px rgba(0, 0, 0, 0.25);
  --card-transition: all 220ms cubic-bezier(0.4, 0, 0.2, 1);
  
  position: relative;
  display: flex;
  flex-direction: column;
  gap: var(--card-gap);
  padding: var(--card-padding);
  background: var(--color-surface-2);
  border: 1px solid var(--color-border);
  border-radius: var(--card-radius);
  box-shadow: var(--card-shadow-rest);
  transition: var(--card-transition);
  overflow: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.party-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--color-accent), var(--color-accent-strong));
}

.party-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--card-shadow-hover);
  border-color: rgba(255, 255, 255, 0.12);
}

/* Modern grid layout */
.event-grid {
  display: grid;
  gap: var(--s-4);
  padding: var(--s-4);
  grid-template-columns: repeat(2, 1fr);
}

@media (max-width: 640px) {
  .event-grid {
    grid-template-columns: 1fr;
  }
}

/* Inside overlay panels - always 2 columns on larger screens */
.panel__body .event-grid {
  padding: 0;
  grid-template-columns: repeat(2, 1fr);
}

@media (max-width: 900px) {
  .panel__body .event-grid {
    grid-template-columns: 1fr;
  }
}

/* Legacy compatibility for existing structures */
.event-card .eyebrow {
  display: flex;
  align-items: center;
  gap: var(--s-2);
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--color-text-dim);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.event-card h3 {
  font-size: 1.25rem;
  font-weight: 600;
  line-height: 1.3;
  color: var(--color-text);
  margin: var(--s-2) 0;
}

.event-card .cta-row {
  display: flex;
  gap: var(--s-3);
  margin-top: var(--s-4);
  padding-top: var(--s-4);
  border-top: 1px solid var(--color-border);
}

.event-card .btn {
  flex: 1;
  padding: var(--s-3) var(--s-4);
  border-radius: var(--r-2);
  font-size: 0.9375rem;
  font-weight: 600;
  text-align: center;
  cursor: pointer;
  transition: var(--transition-fast);
  appearance: none;
  border: 1px solid var(--color-border);
  background: rgba(255, 255, 255, 0.05);
  color: var(--color-text);
  font-family: inherit;
}

.event-card .btn:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(255, 255, 255, 0.12);
}

.event-card .btn.primary {
  background: var(--color-accent);
  color: white;
  border-color: transparent;
}

.event-card .btn.primary:hover {
  background: var(--color-accent-strong);
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(107, 123, 255, 0.3);
}

.event-card .price-badge {
  position: absolute;
  top: var(--s-4);
  right: var(--s-4);
  padding: var(--s-1) var(--s-3);
  background: var(--color-accent-weak);
  border: 1px solid var(--color-accent);
  border-radius: var(--r-4);
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--color-accent-strong);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.event-card .price-badge.free {
  background: rgba(52, 211, 153, 0.15);
  border-color: rgba(52, 211, 153, 0.5);
  color: #34d399;
}