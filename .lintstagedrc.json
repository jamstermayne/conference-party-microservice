{
  "*.{js,ts,tsx}": [
    "eslint --fix",
    "prettier --write"
  ],
  "*.{json,md,yml,yaml}": [
    "prettier --write"
  ],
  "functions/**/*.{js,ts}": [
    "cd functions && npm run lint --fix",
    "cd functions && npm run test -- --findRelatedTests"
  ],
  "public/**/*.{js,css,html}": [
    "eslint --fix",
    "prettier --write"
  ]
}