{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "src/enterprise"
  ]
}
