{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "es2017",
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "tests/types"]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "tests"
  ]
}
