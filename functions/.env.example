# Environment Variables Template
# Copy to .env and configure for your environment

# Project Configuration
NODE_ENV=development
FIREBASE_PROJECT_ID=your-project-id
GCLOUD_PROJECT=your-project-id

# API Configuration
API_BASE_URL=https://us-central1-your-project-id.cloudfunctions.net
CORS_ORIGINS=https://your-app.web.app,http://localhost:3000

# Performance Settings
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=10000

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true

# Test Configuration
TEST_PROJECT_ID=your-project-id-test
TEST_TIMEOUT_MS=30000

# Optional: Google Sheets Integration
# GOOGLE_SHEETS_API_KEY=your-sheets-api-key
# SHEETS_WEBHOOK_SECRET=your-webhook-secret

# Optional: External Services
# REDIS_URL=redis://localhost:6379
# SENTRY_DSN=your-sentry-dsn