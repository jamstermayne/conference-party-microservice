{
  "name": "Conference Party - Professional Networking",
  "short_name": "Conference Party",
  "description": "AI-powered professional networking for Gamescom 2025. Find your perfect connections with intelligent matching.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#12151b",
  "theme_color": "#667eea",
  "orientation": "portrait",
  "categories": [
    "business",
    "social",
    "productivity"
  ],
  "lang": "en",
  "dir": "ltr",
  "icons": [
    {
      "src": "/images/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-256x256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshot-mobile.svg",
      "sizes": "390x844",
      "type": "image/svg+xml",
      "form_factor": "narrow",
      "label": "Mobile event discovery"
    },
    {
      "src": "/images/screenshot-desktop.svg",
      "sizes": "1280x720",
      "type": "image/svg+xml",
      "form_factor": "wide",
      "label": "Desktop event browser"
    }
  ],
  "shortcuts": [
    {
      "name": "View Matches",
      "short_name": "Matches",
      "description": "View your AI-matched connections",
      "url": "/matches",
      "icons": [
        {
          "src": "/images/shortcuts/matches.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Check your conversations",
      "url": "/messages",
      "icons": [
        {
          "src": "/images/shortcuts/messages.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Events",
      "short_name": "Events",
      "description": "Browse conference events",
      "url": "/events",
      "icons": [
        {
          "src": "/images/shortcuts/events.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "scope": "/",
  "id": "conference-party-pwa",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  "protocol_handlers": [
    {
      "protocol": "web+conference",
      "url": "/protocol?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/vcard": [".vcf"],
        "text/calendar": [".ics"]
      }
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false
}